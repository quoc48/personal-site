---
const navLinks = [
  { href: '/work', label: 'Work' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="w-full">
  <nav class="max-w-[1024px] mx-auto px-[50px] py-[50px] flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="font-lato font-bold text-2xl text-[#1E1E1E] hover:opacity-80 transition-opacity">
      QP.
    </a>

    <!-- Menu -->
    <ul class="flex items-center gap-8">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'font-lato text-xl text-[#1E1E1E] transition-opacity hover:opacity-70',
              currentPath === link.href || currentPath === link.href + '/'
                ? 'font-medium'
                : 'font-light'
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
      <!-- External CV Link -->
      <li>
        <a
          href="https://www.dropbox.com/scl/fi/s31fycv7qd58l2szvl4z4/Quoc-s-CV.pdf?rlkey=ffonkk3eymvdpubi8ucvv5omx&st=u4wvypob&dl=0"
          target="_blank"
          rel="noopener noreferrer"
          class="font-lato text-xl text-[#1E1E1E] transition-opacity hover:opacity-70 font-light"
        >
          My CV
        </a>
      </li>
    </ul>
  </nav>
</header>
