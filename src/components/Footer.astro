---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://www.linkedin.com/in/quocphan731', icon: '/linkedin-icon.svg', label: 'LinkedIn' },
  { href: 'https://github.com/quoc48', icon: '/github-icon.svg', label: 'GitHub' },
];
---

<footer class="w-full">
  <div class="max-w-[1024px] mx-auto px-5 md:px-[50px] py-8 md:py-[50px] flex justify-center">
    <div class="flex flex-col items-center gap-4">
      <!-- Social Icons -->
      <div class="flex items-center gap-4">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:opacity-70 transition-opacity"
            aria-label={link.label}
            title={link.label}
          >
            <img src={link.icon} alt={link.label} class="size-6" />
          </a>
        ))}
      </div>

      <!-- Copyright -->
      <p class="font-lato font-light text-sm md:text-base text-black">
        {currentYear} Quoc Phan
      </p>
    </div>
  </div>
</footer>
