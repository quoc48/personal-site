---
import BaseLayout from '../layouts/BaseLayout.astro';

const socialLinks = [
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/yourprofile',
    description: 'Connect with me professionally',
    icon: 'linkedin',
  },
  {
    name: 'GitHub',
    href: 'https://github.com/yourusername',
    description: 'Check out my code',
    icon: 'github',
  },
  {
    name: 'Email',
    href: 'mailto:your.email@example.com',
    description: 'Send me an email',
    icon: 'email',
  },
];

const cvLink = 'https://www.dropbox.com/your-cv-link';
---

<BaseLayout
  title="Contact - Your Name"
  description="Get in touch with me. Find me on LinkedIn, GitHub, or send me an email."
>
  <section class="max-w-4xl mx-auto px-6 py-24">
    <h1 class="text-4xl font-bold text-gray-900">Get in Touch</h1>
    <p class="mt-4 text-lg text-gray-600 max-w-2xl">
      I'm always open to discussing new projects, creative ideas, or opportunities
      to be part of your vision. Feel free to reach out through any of the channels below.
    </p>

    <!-- Social Links -->
    <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          target={link.icon !== 'email' ? '_blank' : undefined}
          rel={link.icon !== 'email' ? 'noopener noreferrer' : undefined}
          class="group flex items-start gap-4 rounded-lg border border-gray-200 p-6 transition-all hover:border-gray-300 hover:shadow-sm"
        >
          <div class="flex-shrink-0">
            {link.icon === 'linkedin' && (
              <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-600 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {link.icon === 'github' && (
              <svg class="w-6 h-6 text-gray-400 group-hover:text-gray-900 transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
            )}
            {link.icon === 'email' && (
              <svg class="w-6 h-6 text-gray-400 group-hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            )}
          </div>
          <div>
            <h3 class="font-medium text-gray-900 group-hover:text-blue-600 transition-colors">
              {link.name}
            </h3>
            <p class="mt-1 text-sm text-gray-500">{link.description}</p>
          </div>
        </a>
      ))}
    </div>

    <!-- CV Download -->
    <div class="mt-16 p-8 rounded-lg bg-gray-50 border border-gray-100">
      <h2 class="text-xl font-semibold text-gray-900">Download My CV</h2>
      <p class="mt-2 text-gray-600">
        Want to know more about my experience and skills? Download my resume.
      </p>
      <a
        href={cvLink}
        target="_blank"
        rel="noopener noreferrer"
        class="mt-4 inline-flex items-center px-6 py-3 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-gray-800 transition-colors"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Download CV
      </a>
    </div>
  </section>
</BaseLayout>
