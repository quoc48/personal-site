---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import ProjectCard from '../../components/ProjectCard.astro';

const projects = await getCollection('projects');
const sortedProjects = projects.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout
  title="Work - Your Name"
  description="Explore my portfolio of projects, including design and development work."
>
  <section class="max-w-4xl mx-auto px-6 py-24">
    <h1 class="text-4xl font-bold text-gray-900">Work</h1>
    <p class="mt-4 text-lg text-gray-600 max-w-2xl">
      A collection of projects I've worked on. Each project represents my passion
      for creating thoughtful, user-centered designs and solutions.
    </p>

    <div class="mt-12 grid gap-8 md:grid-cols-2">
      {sortedProjects.map((project) => (
        <ProjectCard
          title={project.data.title}
          description={project.data.description}
          thumbnail={project.data.thumbnail}
          slug={project.id}
          tags={project.data.tags}
        />
      ))}
    </div>

    {sortedProjects.length === 0 && (
      <p class="mt-12 text-gray-500 text-center">
        No projects yet. Check back soon!
      </p>
    )}
  </section>
</BaseLayout>
