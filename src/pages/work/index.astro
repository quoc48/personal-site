---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Company data
const companies = [
  { name: 'Aperia', logo: '/aperia-logo.svg', bgColor: '#002f67', url: 'https://aperia.com/' },
  { name: 'BioTuring', logo: '/bioturing-logo.png', bgColor: '#f5f5f5', url: 'https://bioturing.com/' },
];

// Project data
const projects = [
  { name: 'CRM', bgColor: '#f34213', slug: 'crm' },
  { name: 'Government', bgColor: '#1472e0', slug: 'government' },
  { name: 'NYCePay', bgColor: '#2c2c2c', slug: 'nycepay' },
  { name: 'Talk2Data', bgColor: '#18c1a8', slug: 'talk2data' },
];

// Experiments data
const experiments = [
  { name: 'Claude Code', bgColor: '#c66240', slug: 'claude-code' },
  { name: 'Expense\nTracker', bgColor: '#5a5a5a', slug: 'expense-tracker' },
];

// Knowledge areas
const knowledge = [
  'UI/UX in Fintech',
  'Design System',
  'Vibe Coding',
  'AI/ML Foundation',
];
---

<BaseLayout
  title="Work - Quoc Phan"
  description="Explore my portfolio of projects in fintech, CRM, case management, and bioinformatics platforms."
>
  <section class="flex flex-col gap-12 px-[50px] py-8">
    <!-- Section 1: Places I've worked -->
    <div class="flex flex-col gap-4">
      <h2 class="font-lato font-light text-[28px] text-[#2c2c2c] leading-normal">
        Places I've worked.
      </h2>
      <div class="flex gap-1">
        {companies.map((company) => (
          <a
            href={company.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center overflow-hidden size-[200px] hover:opacity-90 transition-opacity"
            style={`background-color: ${company.bgColor}`}
          >
            {company.name === 'Aperia' ? (
              <img
                src={company.logo}
                alt={company.name}
                class="w-[108px] h-[32px]"
              />
            ) : (
              <img
                src={company.logo}
                alt={company.name}
                class="w-[146px] h-[61px] object-contain"
              />
            )}
          </a>
        ))}
      </div>
    </div>

    <!-- Section 2: Projects I've built -->
    <div class="flex flex-col gap-4">
      <h2 class="font-lato font-light text-[28px] text-[#2c2c2c] leading-normal">
        A few projects I've built.
      </h2>
      <div class="flex gap-1">
        {projects.map((project) => (
          <a
            href={`/work/${project.slug}`}
            class="flex items-center justify-center overflow-hidden size-[200px] px-3 hover:opacity-90 transition-opacity"
            style={`background-color: ${project.bgColor}`}
          >
            <p class="font-lato font-normal text-2xl text-[#f5f5f5] text-center w-full">
              {project.name}
            </p>
          </a>
        ))}
      </div>
    </div>

    <!-- Section 3: Experiments -->
    <div class="flex flex-col gap-4">
      <h2 class="font-lato font-light text-[28px] text-[#2c2c2c] leading-normal">
        Things I'm experimenting with.
      </h2>
      <div class="flex gap-1">
        {experiments.map((exp) => (
          exp.slug ? (
            <a
              href={`/work/${exp.slug}`}
              class="flex items-center justify-center overflow-hidden size-[200px] px-3 hover:opacity-90 transition-opacity"
              style={`background-color: ${exp.bgColor}`}
            >
              <p class="font-lato font-normal text-2xl text-[#f5f5f5] text-center w-full leading-[1.5] whitespace-pre-line">
                {exp.name}
              </p>
            </a>
          ) : (
            <div
              class="flex items-center justify-center overflow-hidden size-[200px] px-3"
              style={`background-color: ${exp.bgColor}`}
            >
              <p class="font-lato font-normal text-2xl text-[#f5f5f5] text-center w-full leading-[1.5] whitespace-pre-line">
                {exp.name}
              </p>
            </div>
          )
        ))}
      </div>
    </div>

    <!-- Section 4: Knowledge -->
    <div class="flex flex-col gap-4">
      <h2 class="font-lato font-light text-[28px] text-[#2c2c2c] leading-normal">
        Knowledge I've gained.
      </h2>
      <div class="flex gap-1 w-full">
        {knowledge.map((item) => (
          <div
            class="flex-1 flex items-center justify-center overflow-hidden bg-[#5a5a5a] p-4"
          >
            <p class="font-lato font-normal text-xl text-[#f5f5f5] text-center w-full leading-[1.5]">
              {item}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
